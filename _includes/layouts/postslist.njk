---
layout: layouts/base.njk
pagination:
    data: collections.posts
    size: 15
    alias: posts
    reverse: true
---

<ul class="mb-20">
   {% for post in posts %}
        <li class="my-7" {% if post.url == url %} data-current="current item"{% endif %}>
            <h1 class="font-bold text-3xl">
                <a class="deep-blue" href="{{ post.url | url }}">{{ post.data.title }}</a>
            </h1>
            <p class="my-3">
                {{- post.data.description -}}
            </p>

            {% if post.data.summary %}
            <p class="my-3">
                {{- post.data.summary -}}
            </p>
            {% endif %}
            <p class="my-3">
                <time datetime="{{ post.date | machineDate }}">
                    <small>{{ post.date | readableDate }} by <a class="author-link" href="/authors/{{ post.data.author | slug }}/">{{ post.data.author }}</a></small>
                </time>
            </p>
            {% if post.data.tags %}
                {% for tag in post.data.tags %}
                    {%- if tag != "posts" -%}
                        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
                        <small class="mr-3"><a class="tag" href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a></small>
                    {%- endif %}
                {% endfor %}
            {% endif %}
        </li>
       <hr >
   {% endfor %}
</ul>

{% if pagination.href.previous %}<a class="mr-8" href="{{ pagination.href.previous }}">‚Üê Previous</a>{% endif %}
{% if pagination.href.next %}<a href="{{ pagination.href.next }}">Next &#8594;</a>{% endif %}



