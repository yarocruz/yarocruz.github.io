---
layout: layouts/base.njk
---

<div class="my-20">
    <h1 class="font-bold text-3xl">{{ title }}</h1>
    <div class="max-w-prose">
        {% if featuredImage %}<img class="w-auto mt-5" src="{{ featuredImage | url }}" alt="{{ featuredImage }}" />{% endif %}
        {{ content | safe }}

        {% if tags %}
            <p>
                {% for tag in tags %}
                    {%- if tag != "posts" -%}
                        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
                        <small class="mr-3"><a class="tag" href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a></small>
                    {%- endif -%}
                {% endfor %}
            </p>
        {% endif %}
    </div>

    <hr />
</div>

<nav>
    <a href="{{ '/' | url }}">← Blog index</a>
</nav>

{% if pagination.href.previous %}<a class="mr-8" href="{{ pagination.href.previous }}">← Previous</a>{% endif %}
{% if pagination.href.next %}<a href="{{ pagination.href.next }}">Next &#8594;</a>{% endif %}