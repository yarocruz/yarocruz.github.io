---
pagination:
    data: collections
    size: 1
    alias: tag
    filter:
        - all
        - nav
        - post
        - posts
permalink: /tags/{{ tag }}/
layout: layouts/base.njk
renderData:
    title: "Tagged “{{ tag }}”"
---

<h1>Posts Tagged with “{{ tag }}”</h1>

{% set postslist = collections[ tag ] %}

<ul class="my-20">
    {% for post in postslist | reverse %}
        <li class="my-7" {% if post.url == url %} data-current="current item"{% endif %}>
            <h1 class="font-bold text-3xl">
                <a href="{{ post.url | url }}">{{ post.data.title }}</a>
            </h1>
            <p class="my-3">
                {{- post.data.description -}}
            </p>

            {% if post.data.summary %}
                <p class="my-3">
                    {{- post.data.summary -}}
                </p>
            {% endif %}
            <p class="my-3">
                <time datetime="{{ post.date | machineDate }}">
                    <small>{{ post.date | readableDate }} by <a class="author-link" href="/authors/{{ post.data.author | slug }}/">{{ post.data.author }}</a></small>
                </time>
            </p>
            {% if post.data.tags %}
                {% for tag in post.data.tags %}
                    {%- if tag != "posts" -%}
                        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
                        <small class="mr-3"><a class="tag" href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a></small>
                    {%- endif %}
                {% endfor %}
            {% endif %}
        </li>
        <hr >
    {% endfor %}
</ul>

<nav>
    <a href="{{ '/' | url }}">← Blog index</a>
</nav>